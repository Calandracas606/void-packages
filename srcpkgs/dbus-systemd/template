python_version=3
conf_files="/etc/dbus-1/*.conf"

provides="dbus-${version}_${revision} dbus-libs-${version}_${revision}"
#replaces="dbus>=0 dbus-libs>=0"
# Create dbus:22 system account.
system_accounts="dbus:22"

post_install() {
	vsv dbus
}

dbus-systemd-devel_package() {
	depends="expat-devel dbus-systemd>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/dbus-*"
		vmove usr/lib/pkgconfig
#		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/share/doc
		vmove usr/lib/cmake
	}
}

