# Template file for 'dbus-systemd'
pkgname=dbus-systemd
version=1.15.8
revision=1
build_style=meson
#configure_args="-Dsystemd=enabled -Dapparmor=enabled"
#configure_args="--disable-selinux --enable-inotify --with-dbus-user=dbus
# --enable-xml-docs --enable-epoll
