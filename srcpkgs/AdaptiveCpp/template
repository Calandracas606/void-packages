post_install() {
	vlicense LICENSE
	vmkdir /usr/etc
	mv ${DESTDIR}/usr/etc ${DESTDIR}
	jq '."default-cpu-cxx"="/usr/bin/clang++" | ."default-targets"="omp;generic"' \
	${DESTDIR}/etc/hipSYCL/syclcc.json | sponge ${DESTDIR}/etc/hipSYCL/syclcc.json
}
