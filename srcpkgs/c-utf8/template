# Template file for 'c-utf8'
pkgname=c-utf8
version=1.1.0
revision=1
build_style=meson
hostmakedepends="pkg-config"
makedepends="c-stdaux"
short_desc="UTF-8 Handling in Standard ISO-C11"
maintainer="Daniel Martinez <danielmartinez@cock.li>"
license="Apache-2.0 LGPL-2.1-or-later"
homepage="https://c-util.github.io/c-utf8/"
changelog="https://raw.githubusercontent.com/c-util/c-utf8/v${version}/NEWS.md"
distfiles="https://github.com/c-util/c-utf8/archive/refs/tags/v${version}.tar.gz"
checksum=8f948eaaa4ac69393adf96632fd06174ca1531bb4bb0728355281411b87bdf7d

c-utf8-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
