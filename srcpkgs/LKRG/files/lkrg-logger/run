#!/bin/sh
exec 2>&1
umask 077
[ -r conf ] && . ./conf

# Generate keypair if it does not exist
if [ ! -r /etc/lkrg-logger.conf ]; then
        lkrg-keygen > /etc/lkrg-logger.conf
        sed -i "s/LKRG_LOGGER/export LKRG_LOGGER/g" /etc/lkrg-logger.conf
fi

. /etc/lkrg-logger.conf

exec lkrg-logger -D
