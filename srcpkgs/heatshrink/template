# Template file for 'heatshrink'
pkgname=heatshrink
version=0.4.1
revision=1
build_style=cmake
short_desc="Data compression library for embedded/real-time systems"
maintainer="Daniel Martinez <danielmartinez@cock.li>"
license="ISC"
homepage="https://github.com/atomicobject/heatshrink"
distfiles="https://github.com/atomicobject/heatshrink/archive/refs/tags/v${version}.tar.gz"
checksum=7529a1c8ac501191ad470b166773364e66d9926aad632690c72c63a1dea7e9a6

post_extract() {
	cp ${FILESDIR}/* .
}

post_install() {
	vlicense LICENSE
}

heatshrink-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.a"
	}
}
