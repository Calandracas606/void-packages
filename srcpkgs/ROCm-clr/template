makedepends="hipcc ROCr-devel comgr libnuma-devel libffi-devel libedit-devel MesaLib-devel ncurses-libtinfo-devel libxml2-devel libzstd-devel"
depends="comgr-${version}_${revision} ROCr-${version}_${revision}"
#conflicts="comgr>${version}_999 comgr<${version} ROCr>${version}_999 ROCr<${version} hipcc"
