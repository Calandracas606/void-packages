#_hip_dir=${wrksrc}/HIP-rocm-${version}
configure_args="
	-DCLR_BUILD_HIP=ON
	-DHIP_COMMON_DIR=$_hip_dir
	-DHIPCC_BIN_DIR=/usr/bin
	-DROCM_PATH=/usr
"
#	-DCLR_BUILD_OCL=ON
