if [ "$XBPS_WORDSIZE" = "32" ]; then
	broken="rustc-LLVM ERROR: out of memory"
fi

do_install() {
	just --set targetdir "target/${RUST_TARGET}" --set rootdir ${DESTDIR} \
		--set prefix /usr --set cosmic-applets-bin cosmic-applets install
}
